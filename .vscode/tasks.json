{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\qt\\mingw900_64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++2a",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
